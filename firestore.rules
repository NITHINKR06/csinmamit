rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ============================================================================
    // USERS - PARTIAL UPDATE SAFE
    // ============================================================================
    match /users/{userId} {
      allow read: if isOwner(userId);

      allow create: if isOwner(userId);

      allow update: if isOwner(userId)
        // Block role changes from client
        && !(request.resource.data.keys().hasAny(['role']))
        // Block certificates changes from client
        && !(request.resource.data.keys().hasAny(['certificates']));

      allow delete: if isOwner(userId);
    }

    // ============================================================================
    // TEAM MEMBERS
    // ============================================================================
    match /team-members/{document=**} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    // ============================================================================
    // EVENTS
    // ============================================================================
    match /events/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // ============================================================================
    // TEAMS
    // ============================================================================
    match /teams/{teamId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // ============================================================================
    // RECRUITS
    // ============================================================================
    match /recruits/{document=**} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // ============================================================================
    // METADATA
    // ============================================================================
    match /metadata/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // ============================================================================
    // ADMIN / LOGS / ANALYTICS
    // ============================================================================
    match /admin/{document=**} {
      allow read, write: if isAuthenticated();
    }
    match /logs/{document=**} {
      allow read, write: if isAuthenticated();
    }
    match /analytics/{document=**} {
      allow read, write: if isAuthenticated();
    }

    // ============================================================================
    // DEFAULT DENY
    // ============================================================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
